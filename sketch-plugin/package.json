{
    "name": "copy-paste-shadows",
    "description": "Plugin to copy paste shadows across layers",
    "version": "0.1.0",
    "engines": {
        "sketch": ">=49.0"
    },
    "skpm": {
        "name": "copy-paste-shadows",
        "manifest": "src/manifest.json",
        "main": "../copy-paste-shadows.sketchplugin",
        "assets": [
            "assets/**/*"
        ]
    },
    "scripts": {
        "build": "skpm-build",
        "watch": "skpm-build --watch",
        "run": "skpm-build --run",
        "start": "skpm-build --watch --run",
        "postinstall": "yarn build && skpm-link"
    },
    "devDependencies": {
        "@skpm/builder": "^0.5.11"
    }
}